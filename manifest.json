{
    "manifest_version": 3,
    "name": "Media Manager",
    "version": "1.0",
    "description": "Media Manager chrome extension",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"  
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "scripting",
        "tabCapture"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}